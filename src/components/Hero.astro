	@media (max-width: 480px) {
		.hero {
			padding-top: 80px;
		}

		.hero-content {
			padding: 15px 5px;
		}

		.hero-logo {
			margin-bottom: 25px;
		}

		.hero-logo-image {
			height: 80px;
		}

		.hero-title {
			font-size: 1.8rem;
		}

		.hero-subtitle {
			font-size: 1rem;
		}

		.floating-element {
			font-size: 1.2rem;
		}
	}

	.highlight {
		font-weight: bold;
		color: #ff6b6b;
		text-shadow: 0 0 10px rgba(255, 107, 107, 0.3);
	}

	.logo-kana {
		font-size: 1.15rem;
		font-family: 'Noto Sans JP', 'Hiragino Kaku Gothic ProN', 'Meiryo', sans-serif;
		margin-top: 8px;
		letter-spacing: 0.18em;
		font-weight: 700;
		background: linear-gradient(90deg, #ff6b9d 0%, #667eea 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		text-fill-color: transparent;
		text-shadow: 0 2px 8px rgba(255, 107, 157, 0.08);
	}
</style>